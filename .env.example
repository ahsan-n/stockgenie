# StockGenie Environment Configuration
# Copy this file to .env and fill in your actual values

# Application
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=stockgenie
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=stockgenie_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Qdrant Vector Database
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=financial_documents

# OpenAI API (for RAG/AI features)
OPENAI_API_KEY=sk-placeholder-your-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# API Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=1
BACKEND_RELOAD=true

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_APP_NAME=StockGenie

# Data Sources
USE_MOCK_DATA=true
PSX_API_URL=https://dps.psx.com.pk
PSX_API_KEY=your-psx-api-key-if-needed

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Security
SECRET_KEY=changeme-generate-secure-random-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Monitoring
SENTRY_DSN=
ENABLE_METRICS=true

# Budget Management
OPENAI_MONTHLY_BUDGET_USD=5
ALERT_AT_BUDGET_PERCENT=80
